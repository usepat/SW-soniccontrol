{
    "version": "2.0.0",
    "tasks": [
        {   
            "label": "Install editable build",
            "type": "shell",
            "command": "pip install -e ${workspaceFolder}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
        },
        {
            "label": "Build SonicControl with PyInstaller",
            "type": "shell",
            "linux": { 
                "command": "${workspaceFolder}/scripts/create_exe.sh" 
            },
            "windows": {
                "command": "${workspaceFolder}/scripts/create_exe.bat"
            },
            "args": [
                "${workspaceFolder}"
            ],
            "dependsOn":[
                "Install editable build"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
            ]
        }, 
        {
            "label": "Run unit tests",
            "type": "shell",
            "command": "pytest",
            "args": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}
