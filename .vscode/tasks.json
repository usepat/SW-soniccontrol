{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SonicControl with PyInstaller",
            "type": "shell",
            "linux": { 
                "command": "${workspaceFolder}/scripts/create_exe.sh" 
            },
            "windows": {
                "command": "${workspaceFolder}/scripts/create_exe.bat"
            },
            "args": [
                "${workspaceFolder}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
